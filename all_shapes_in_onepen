import turtle as t
import random
tim=t.Turtle()
colors=["red","green","orange","black"]
def draw_shape(no_of_sides):
    angle=360/no_of_sides
    for _ in range(no_of_sides):
        tim.forward(100)
        tim.right(angle)
for shape_side_n in range(3,11):
    tim.color(random.choice(colors))
    draw_shape(shape_side_n)

